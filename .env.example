# MCP Security Demo Environment Configuration

# Server Ports (for future network-based communication)
MCP_SERVER_1_PORT=3001
MCP_SERVER_2_PORT=3002
MCP_SERVER_3_PORT=3003

# Sandbox Configuration
SANDBOX_PATH=/tmp/mcp-demo-sandbox

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_PATH=./logs

# Metrics & Monitoring
ENABLE_METRICS=true
MONITOR_PORT=3000

# Security Settings
RATE_LIMIT_COMMANDS=5
RATE_LIMIT_WINDOW_MS=60000
COMMAND_TIMEOUT_MS=5000

# Demo Mode
DEMO_MODE=true
AUTO_CLEANUP=true
